<p id="notice"><%= notice %></p>

<div class="section-title">
  <h2>Listing Schools</h2>
</div>

<table class="tables">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>City</th>
      <th>State</th>
      <th>District</th>
      <th>Picture</th>
      <th colspan="3" id="user-action">User Action</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.description %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.district %></td>
        <td><%= school.picture %></td>
					<td class="crud-button-group"><button><%= link_to 'Show', school %></button></td>
					<td class="crud-button-group"><button><%= link_to 'Edit', school %></button></td>
      		<td class="crud-button-group"><button><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-button-group">
	<div class="new-button"><%= link_to 'New School', new_school_path %></div>
</div>
